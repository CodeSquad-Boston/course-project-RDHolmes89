<%- include('../partials/head') -%>

<%- include('../partials/nav') -%>

    <div class="background-container">

        <div class="display-container">

            <h2>UPDATE COMIC</h2>

            <div class="inside-container">

                <form action="books/<%= foundBook._id %>?_method=PUT" method="POST">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= foundBook.title %>"><br><br>
                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" value="<%= foundBook.author %>"><br><br>
                    <label for="Publisher">Publisher</label>

                    <select name="Publisher" id="Publisher">
                        <option value="<%= foundBook.publisher %>">--publisher value stored in database--</option>
                    </select><br><br>

                    <label for="genre">Genre:</label>
                    <input type="text" id="genre" name="genre" value="<%= foundBook.genre %>"><br><br>
                    <label for="number">Number of pages:</label>
                    <input type="text" id="number" name="number" value="<%= foundBook.pages %>"><br><br>
                    <label for="rating">Rating:</label>
                    <input type="text" id="rating" name="rating" value="<%= foundBook.rating %>"><br><br>
                    <label for="synopsis">Synopsis:</label>

                    <textarea name="synopsis" placeholder="<%= foundBook.synopsis %>"></textarea><br><br>

                    <label for="image">Image:</label><br><br>
                    <input type="text" id="image" name="image" value="<%= foundBook.image %>"><br><br>

                    <!---HW12-1 #6 Label below add that will temp handle images for each new comic update -->
                    <label for="update">Update Image:</label><br><br>
                    <input type="text" id="book_update" name="update" value=""><br><br>

                    <label for="delete">Delete:</label><br><br>
                    <input type="text" id="book_delete" name="delete" value=""><br><br>
                    


                    <button type="submit">Submit</button>
                </form>

            </div>

        </div>

    </div>

 <%- include('../partials/footer') -%>